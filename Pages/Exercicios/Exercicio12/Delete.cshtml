@page
@model AgenciaTurismo.Pages.Exercicios.Exercicio12.DeleteModel
@using AgenciaTurismo.Models

@{
    ViewData["Title"] = "Excluir Pacote Turístico";
}

<h2 class="text-center mt-4">Excluir Pacote Turístico</h2>

<div class="d-flex justify-content-center">
    <div class="card p-4 mt-4" style="width: 400px;">
        <h5 class="text-center mb-3">Tem certeza que deseja excluir o pacote abaixo?</h5>

        <dl class="row">
            <dt class="col-sm-4">Título:</dt>
            <dd class="col-sm-8">@Model.PacoteTuristico.Titulo</dd>

            <dt class="col-sm-4">Preço:</dt>
            <dd class="col-sm-8">@Model.PacoteTuristico.Preco.ToString("C")</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="PacoteTuristico.Id" />
            <button type="submit" class="btn btn-danger w-100">Confirmar Exclusão</button>
        </form>

        <a asp-page="Index" class="btn btn-secondary mt-3 w-100">Cancelar</a>
    </div>
</div>
