@page
@model AgenciaTurismo.Pages.Exercicios.Exercicio12.IndexModel

@{
    ViewData["Title"] = "Pacotes Turísticos";
}

<h2 class="text-center mt-4">Lista de Pacotes Turísticos</h2>

<div class="text-end mb-3">
    <a asp-page="Create" class="btn btn-success">Cadastrar Novo Pacote</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PacoteTuristico)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Preco.ToString("C")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
