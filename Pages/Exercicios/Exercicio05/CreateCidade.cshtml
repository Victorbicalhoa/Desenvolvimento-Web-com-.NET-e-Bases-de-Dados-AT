@page
@model AgenciaTurismo.Pages.Exercicios.Exercicio05.CreateCidadeModel
@{
    ViewData["Title"] = "Exercício 05 - Cadastro de Cidade";
}

<h2 class="text-center mt-4">Cadastro de Cidade</h2>

<div class="d-flex justify-content-center">
    <div class="card p-4 mt-4" style="width: 400px;">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Cidade.Nome" class="form-label">Nome da Cidade</label>
                <input asp-for="Cidade.Nome" class="form-control" />
                <span asp-validation-for="Cidade.Nome" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
        </form>

        @if (Model.Mensagem != null)
        {
            <div class="alert alert-success mt-3 text-center">
                <strong>@Model.Mensagem</strong>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
